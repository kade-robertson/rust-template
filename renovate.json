{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "github-actions": {
    "managerFilePatterns": [
      "/^github-actions/.+\\.ya?ml\\.liquid$/"
    ]
  },
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "lukemathwalker/cargo-chef"
      ],
      "versioning": "regex:^(?<compatibility>.*)(?<major>\\d+)\\.(?<minor>\\d+)$"
    }
  ]
}
